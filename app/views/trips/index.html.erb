<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Itinerary item</th>
      <th>Blog link</th>
      <th>Photo link</th>
      <th>Tripit link</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= link_to trip.name , trip %></td>
        <td><%= trip.description %></td>
        <td><%= trip.itinerary_item %></td>
        <td><%= trip.blog_link %></td>
        <td><%= trip.photo_link %></td>
        <td><%= trip.tripit_link %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
