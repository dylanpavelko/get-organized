<h1>Listing attraction_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attraction_categories.each do |attraction_category| %>
      <tr>
        <td><%= attraction_category.name %></td>
        <td><%= link_to 'Show', attraction_category %></td>
        <td><%= link_to 'Edit', edit_attraction_category_path(attraction_category) %></td>
        <td><%= link_to 'Destroy', attraction_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attraction category', new_attraction_category_path %>
