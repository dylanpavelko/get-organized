<h1>Listing transactions</h1>

<table>
  <thead>
    <tr>
      <th>Inventory item</th>
      <th>Buyer person</th>
      <th>Seller business</th>
      <th>Price</th>
      <th>Transaction date</th>
      <th>Amount</th>
      <th>Quantity type</th>
      <th>Shopping list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= link_to transaction.inventory_item.full_name, transaction.inventory_item %></td>
        <td><%= transaction.buyer_person.first_name %></td>
        <td><%= transaction.seller_business.try :name %></td>
        <td><%= transaction.price %></td>
        <td><%= transaction.transaction_date %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.quantity_type.try :quantityType %></td>
        <td><%= transaction.shopping_list %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
