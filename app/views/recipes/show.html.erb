<p id="notice"><%= notice %></p>

<h3>
  <%= @recipe.name %>
</h3>

<div class="pull_right">
  <% if @recipe.picture != nil %> <%=  image_tag(@recipe.picture.image.url(), width: 400) %> <% end %>
</div>

<div class="field col-md-6">
  <strong>Serving size:</strong>
  <%= @recipe.serving_size %>
</div>

<div class="field col-md-6">
  <strong>Source:</strong>
  <% if @recipe.source.include? "http" %>
    <a href='<%= @recipe.source %>'><%= @recipe.source %></a>
  <% else %>
    <%= @recipe.source %>
  <% end %>
</div>

<div class="field col-md-12">
  <strong>Description:</strong>
  <%= @recipe.description %>
</div>

<div class="field col-md-12">
  <strong>Ingredients:</strong>
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li>
        <%= ingredient.amount %> <% if ingredient.quantity_type != nil %><%= ingredient.quantity_type.quantityType %> <% end %>
        <% if ingredient.food_item != nil %>
         - 
        <%= ingredient.food_item.name %>
        <% end %>
        <%= ingredient.note %>
      </li>
    <% end %>
  </ul>
</div>

<div class="field col-md-12">
  <strong>Instructions:</strong>
  <ol>
  <% @instructions.each do |step| %>
    <li><%= step.instruction %></li>
  <% end %>
  </ol>
</div>


<div class="field col-md-12">
  <strong>Notes:</strong>
  <%= @recipe.notes %>
</div>

<div class="field col-md-12">
  <% if @recipe.author != nil %>
    <strong>Added By:</strong>
    <%= @recipe.author.first_name %>
  <% end %>
</div>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
