<h1>Recipes</h1>

<% @recipes.each do |recipe| %>
<div class="col-md-4">
<table>
    
      <tr>
        <td><% if recipe.picture != nil %><div style="max-height:150px;overflow:hidden;"><%= link_to image_tag(recipe.picture.image.url(), :style => "max-width: 200px;width:100%;top-100%;bottom-100%;"), recipe %></div><% end %></td>
        <td><p><strong><%= link_to recipe.name, recipe %></strong></p><p><%= recipe.serving_size %></p></td>
        <td></td>
        <td><%= recipe.description %></td>
      </tr>

</table>
</div>
<% end %>
<br>
<div class="col-md-12">
<%= link_to 'New Recipe', new_recipe_path %>
</div>