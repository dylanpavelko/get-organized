<h1>Listing trip_has_inventory_items</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>Inventory item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_has_inventory_items.each do |trip_has_inventory_item| %>
      <tr>
        <td><% if trip_has_inventory_item.trip != nil %><%= link_to trip_has_inventory_item.trip.name , trip_has_inventory_item.trip%><% end %></td>
        <td><%= link_to trip_has_inventory_item.inventory_item.full_name , trip_has_inventory_item.inventory_item%></td>
        <td><%= link_to 'Show', trip_has_inventory_item %></td>
        <td><%= link_to 'Edit', edit_trip_has_inventory_item_path(trip_has_inventory_item) %></td>
        <td><%= link_to 'Destroy', trip_has_inventory_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

