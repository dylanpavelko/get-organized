<h1>Listing airlines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Loyalty program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= link_to image_tag(airline.image, width: '200'), airline %></td>
        <td>  
          <% if airline.loyalty_program != nil %> 
            <%= link_to image_tag(airline.loyalty_program.image, width: '200'), airline.loyalty_program %>
          <% end %>
        </td>
        <td><%= link_to 'Show', airline %></td>
        <td><%= link_to 'Edit', edit_airline_path(airline) %></td>
        <td><%= link_to 'Destroy', airline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airline', new_airline_path %>
