<table>
  <thead>
    <tr>
      <th>Looyalty Program</th>
      <th>Number</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loyalty_programs.each do |loyalty_program| %>
      <tr>
        <td><%= link_to image_tag(loyalty_program.image, width: '200'), loyalty_program %></td>
        <td><%= loyalty_program.number %></td>
        <td><%= loyalty_program.username %></td>
        <td><%= link_to 'Show', loyalty_program %></td>
        <td><%= link_to 'Edit', edit_loyalty_program_path(loyalty_program) %></td>
        <td><%= link_to 'Destroy', loyalty_program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

